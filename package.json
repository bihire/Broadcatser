{
  "name": "broadcaster",
  "version": "1.0.0",
  "description": "a red-flag/intervention call app",
  "main": "server/app.js",
  "scripts": {
    "test": "npm run create && nyc --require @babel/register mocha server/test/v1/*.js server/test/v2/*.js  --exit",
    "lint": "eslint --ignore-path .gitignore **/*.js",
    "format": "prettier-eslint **/*.{js,json} --write",
    "start": "npm run create && nodemon --exec babel-node ./server/app.js",
    "coveralls": "nyc report  --reporter=text-lcov  | coveralls",
    "ci": "npm run nyctest && npm run coveralls",
    "create": "babel-node server/api/v2/database/index.js createTables"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bihire/Broadcatser.git"
  },
  "author": "bihire",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^4.0.0",
    "eslint": "^6.4.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^10.0.0",
    "eslint-plugin-prettier": "^3.1.0",
    "mocha": "^5.1.1",
    "prettier-eslint-cli": "^5.0.0",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "@babel/cli": "^7.6.0",
    "@babel/core": "^7.6.0",
    "@babel/node": "^7.6.1",
    "@babel/plugin-transform-runtime": "^7.6.0",
    "@babel/polyfill": "^7.6.0",
    "@babel/preset-env": "^7.6.0",
    "@babel/register": "^7.6.2",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^10.0.3",
    "babel-jest": "^24.9.0",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "circular-json": "^0.5.9",
    "cloudinary": "^1.17.0",
    "coveralls": "^3.0.4",
    "dotenv": "^8.1.0",
    "express": "^4.17.1",
    "joi": "^14.3.1",
    "jsonwebtoken": "^9.0.0",
    "make-runnable": "^1.3.6",
    "mocha-lcov-reporter": "^1.3.0",
    "morgan": "^1.9.1",
    "nodemailer": "^6.4.0",
    "nodemon": "^1.17.4",
    "nyc": "^14.1.1",
    "path": "^0.12.7",
    "pg": "^7.12.1"
  },
  "bugs": {
    "url": "https://github.com/bihire/Broadcatser/issues"
  },
  "homepage": "https://github.com/bihire/Broadcatser#readme",
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  }
}
